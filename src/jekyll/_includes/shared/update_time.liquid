{% if page.layout == "article" %}
{% if page.article.updated_on %}
  <p>{{"updated_on" | localize_string}} {{ page.article.updated_on }}</p>
{% else %}
  {% if page.article.published_on %}
  <p>{{"published_on" | localize_string}} {{ page.article.published_on }}</p>
  {% endif %}
{% endif %}
{% endif %}
