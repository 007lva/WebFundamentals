<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col wf-card">
  <div class="mdl-card__title" style="background-image:url({{include.imgUrl}})">
    <h2 class="mdl-card__title-text">{{include.title}}</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <span>{{include.text}}</span>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{include.linkHref}}">
      {{include.linkText}}
    </a>
  </div>
  <div class="mdl-card__menu">

  </div>
</div>
