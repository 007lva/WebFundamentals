    {% include head.liquid %}
  </head>

  <body {% if page.rtl == true %}dir="rtl" {% endif %}class="page--{{ page.class }}" itemscope itemtype="http://schema.org/Article">
    {% injectdata content _betterbook.yaml %}

    {% include header.liquid %}

    <header class="spotlight-header spotlight-header--detail spotlight-header--portrait actual-spotlight clear">
      <div class="spotlight-header__container container">
        {% include modules/breadcrumbs.liquid %}
        <div class="spotlight-header__copy g--half">
          <h1 class="xxlarge">{{ page.title }}</h1>

          <p class="spotlight-tags">
          <a href="{{page.link}}" target="_blank">{{page.link}}</a> â€“ 
          {% for tag in page.tags %}
          <a href="{{site.baseurl}}/fundamentals/showcase/spotlight/tags/{{tag}}">#{{tag}}</a>
          {% endfor %}
          </p>

          <div class="spotlight-scores clear">
            <div class="g--half">
              <span class="{% if page.scores.pagespeed.value < 60 %}low{% elsif page.scores.pagespeed.value < 71 %}medium{% else %}high{% endif %}"><strong>{{page.scores.pagespeed.value}}</strong>/100</span>
              <a href="https://developers.google.com/speed/pagespeed/insights/?url=digg.com">PageSpeed Insights</a>
            </div>
            <div class="g--half g--last">
              <span class="{% if page.scores.webpagetest.value > 5000 %}low{% elsif page.scores.webpagetest.value > 3000 %}medium{% else %}high{% endif %}"><strong>{{page.scores.webpagetest.value}}</strong></span>
              <a href="{{page.scores.webpagetest.result}}">Speed Index</a>
            </div>
          </div>
          


        </div>
        <div class="spotlight-header__media g--half g--last">
          <a href="{{page.link}}" target="_blank"><img src="{{site.baseurl}}/fundamentals/showcase/spotlight/images/{{ page.id }}/screenshot.jpg" class="spotlight-header__image"></a>
        </div>
      </div>
    </header>

    <div class="spotlight-wrapper">
      <div class="container clear">
        <div class="content spotlight-wrapper__content g--half">
          <h2>Our thoughts</h2>
          <p>{{ page.introduction }}</p>
          {{ content }}
        </div>
        {% include modules/related_spotlight_guides.liquid list=page.related %}
      </div>
      
    </div>

    {% include modules/more_spotlights.liquid on-spotlight=true %}

    {% include cc.liquid %}
    {% include footer.liquid %}
