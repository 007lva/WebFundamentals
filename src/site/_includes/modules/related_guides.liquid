{% if include.list %}
<div class="related-items clear">
  <h3 class="related-items__title g-wide--1 g-medium--full">Related guides</h3>
  <div class="related-items__section clear">

    <ul class="related-items-list list-reset">
    {% for guide in include.list %} 
      <li class="g-medium--1 g-wide--1 {% cycle '','','g-medium--last g-wide--last' %} theme--{{guide.section.id | downcase | replace:' ','-'}}">
        <p><a class="tag themed" href="{{site.baseurl}}/{{guide.section.href}}" title="{{guide.section.title}}">{{guide.section.title}}</a></p>
        <p class="medium"><a href="{{site.baseurl}}/{{guide.href}}#">{{guide.title}}</a></p>
      </li>
    {% endfor %}
    </ul>

  </div>
</div>
{% endif %}
