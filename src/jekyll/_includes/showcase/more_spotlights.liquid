<div class="container">

  <div class="related-items clear {% if include.on-spotlight %}related-items-on-spotlight{% endif %}">
    <h3 class="related-items__title g-wide--1 g-medium--full">More spotlights</h3>
    <div class="related-items__section clear">

      <ul class="related-items-list list-reset">

        {% comment %}TODO: This if statement wasn't originally needed - just here to get build working - @gauntface FIX ME{% endcomment %}
        {% if page.articles.spotlight %}

        {% assign count = '' %}
        {% assign spotlights = page.articles.spotlight | sort: 'date' | reverse  %}
        {% for spotlight in spotlights limit:7 %}
          {% if page.id != spotlight.id and count.size < 3 %}
          <li class="g-medium--1 g-wide--1{% cycle 'more-spotlights': '', '', ' g-medium--last g-wide--last' %}">
            <a href="{{site.WFBaseUrl}}{{spotlight.url | canonicalize}}">
              <img src="{{site.WFBaseUrl}}/showcase/spotlight/images/{{ spotlight.id }}/screenshot-small.png" alt="{{spotlight.title}}">
              <p class="medium">{{spotlight.title}}</p>
            </a>
          </li>
          {% capture count %}{{ count }}*{% endcapture %}
          {% endif %}

        {% endfor %}

        {% endif %}

      </ul>

    </div>
  </div>

</div>
