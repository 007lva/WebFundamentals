<nav class="breadcrumbs">
  <p>
  {% for p in page.ancestors %}
    <span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
    <a href="{{site.baseurl}}{{ p.url | canonical_url | localize_link:page }}" title="{{ p.title }}" {% if forloop.first %}rel="home"{%endif%} itemprop="url"><span itemprop="title">{{ p.title }}</span></a>
    </span>
    /
  {% endfor %}
  </p>
</nav>
