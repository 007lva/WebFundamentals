{% comment %}
  Handy alias for the highlight module with pre-populated values for "Remember"
{% endcomment %}

{% assign type = "remember" %}
{% assign character = "!" %}
{% assign title = "Remember" %}
{% assign position = "right" %}

{% if include.title %}
{% assign title = include.title %}
{% endif %}
{% if include.type %}
{% assign type = include.type %}
{% endif %}
{% if include.character %}
{% assign character = include.character %}
{% endif %}
{% if include.position %}
{% assign position = include.position %}
{% endif %}

{% include modules/highlight.liquid title=title text=include.text list=include.list position=position type=type character=character %}
