<?xml version="1.0" encoding="UTF-8"?>
{{content}}
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
  <link type="application/rss+xml" href="{{ page.canonical_url }}" rel="self"/>
  <link type="text/html" href="{{ page.feed_link }}" rel="alternate"/>

  <title>{{ page.feed_title }}</title>
  <icon>{{ page.feed_icon }}</icon>
  <id>{{ page.feed_id }}</id>
  <subtitle>{{ page.feed_description }}</subtitle>
  <updated>{{ page.feed_update }}</updated>
  {% for post in page.feed_pages %}
  <entry>
    <published>{{ post.article.written_on | date: "%Y-%m-%dT%H:%M:%SZ" }}</published>
    {% if post.article.updated_on %}
    <updated>{{ post.article.updated_on | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
    {% endif %}

    <title>Web Updates â€“ {{ post.title | xml_escape }}</title>
    <link rel="alternate" type="text/html" href="{{ site.WFBaseUrl }}{{ post.url }}?utm_source=feed&amp;utm_medium=feed&amp;utm_campaign={{ page.feed_section }}_feed" />
    <content type="html">
      {{ post.description | xml_escape }}
      &lt;img src=&quot;https://ga-beacon.appspot.com/UA-52746336-1/feed{{ post.url }}?pixel&quot;&gt;
    </content>

    <id>{{ site.WFAbsoluteUrl }}{{ post.url }}</id>
    {% if post.authors %}
      <author><name>
      {% for author in post.authors %}
        {% assign contributor = site.data["contributors"][author] %}
        {{contributor.name.given}} {{contributor.name.family}}
        {% if forloop.last == false %}, {% endif %}
      {% endfor %}
      </name></author>
    {% endif %}
  </entry>
{% endfor %}
</feed>
