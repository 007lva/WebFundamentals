<div class="highlight highlight--left highlight--learning highlight--large">
  <div class="highlight__container" data-character="*">
    <div class="g-wide--push-1 g-wide--pull-1 g-medium--push-1">
      <h1 class="highlight__title"> {{ include.title }}</h1>

      {% if include.text %}
        <p class="highlight__text"> {{ include.text }} </p>
      {% endif %}

      {% if include.list %}
        <ul class="highlight__list">
        {% for item in include.list %}
          <li>{{ item }}</li>
        {% endfor %}
        </ul>
      {% endif %}

    </div>
  </div>
</div>
